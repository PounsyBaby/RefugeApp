{
  "name": "refuge-pro-vue",
  "version": "1.0.0",
  "sideEffects": [
    "src/main/ipc/*.ts"
  ],
  "private": true,
  "main": ".vite/build/main.js",
  "description": "Refuge Animalier Pro - Electron + Vue 3 + TypeScript + MySQL",
  "scripts": {
    "start": "electron-forge start",
    "dev": "electron-forge start",
    "package": "electron-forge package",
    "build": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "prisma:generate": "prisma generate",
    "db:setup": "ts-node --project tsconfig.node.json ./src/main/db/setup.ts",
    "seed:admin": "ts-node --project tsconfig.node.json ./src/main/db/seed-admin.ts",
    "seed:sample": "ts-node --project tsconfig.node.json ./src/main/db/seed-sample.ts",
    "test:smoke": "ts-node --project tsconfig.node.json ./scripts/smoke-test.ts",
    "lint": "eslint .",
    "postinstall": "prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "argon2": "^0.41.1",
    "dotenv": "^16.4.5",
    "electron-log": "^5.2.2",
    "electron-squirrel-startup": "^1.0.1",
    "mime-types": "^3.0.1",
    "mysql2": "^3.15.2",
    "vue": "^3.5.12",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.9.0",
    "@electron-forge/maker-rpm": "^7.9.0",
    "@electron-forge/maker-squirrel": "^7.9.0",
    "@electron-forge/maker-zip": "^7.9.0",
    "@electron-forge/plugin-vite": "^7.9.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^20.14.12",
    "@vitejs/plugin-vue": "^5.2.4",
    "electron": "^38.2.2",
    "eslint": "^9.10.0",
    "prisma": "^6.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vite": "^6.4.0"
  }
}
